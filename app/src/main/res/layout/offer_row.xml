<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/testbuilding"
        android:scaleType="fitXY"
        android:contentDescription="@string/off_building_desc" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:columnCount="4"
        android:background="#80000000"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TableRow>
            <TextView
                android:id="@+id/offer_row_address"
                android:layout_weight="3"
                tools:text="Address"
                android:textSize="15sp"
                android:textColor="#FFF"/>
            <TextView
                android:id="@+id/offer_row_discount"
                android:layout_weight="1"
                android:textSize="15sp"
                android:gravity="end"
                android:textColor="#ff8400"
                android:textStyle="bold"
                tools:text="discount"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/offer_row_name"
                android:layout_weight="3"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:textStyle="bold"
                tools:text="Name"/>
            <TextView
                android:id="@+id/offer_row_period"
                android:layout_weight="1"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:gravity="end"
                tools:text="period"/>
        </TableRow>


    </TableLayout>
</FrameLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:id="@+id/offer_row_shortDesc"
            tools:text="ShortDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#000"
            android:lines="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:background="#f2f2f2"
            android:padding="2dp"
            android:paddingRight="15dp"
            android:paddingEnd="15dp">


            <TextView
                android:id="@+id/offer_row_price"
                tools:text="price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="12sp"
              />
            <TextView
                android:id="@+id/offer_row_discountPrice"
                tools:text="discountedPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#E2321D"
                android:textStyle="bold"
                android:textSize="17sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>