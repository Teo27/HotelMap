<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:id="@+id/offer_row_shortDesc"
            tools:text="ShortDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#000"
            android:lines="2"
            android:ellipsize="end"/>
        <LinearLayout
            android:paddingRight="15dp"
            android:paddingEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:background="#f2f2f2"
            android:padding="2dp">


            <TextView
                android:id="@+id/offer_row_price"
                tools:text="price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/offer_row_discountPrice"
                tools:text="discountedPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="17sp"
                android:textColor="#E2321D"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:paddingTop="2dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/offer_row_desc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="15sp"
        android:textColor="#000"
        tools:text="Desc"
        android:ellipsize="end"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <Button
            android:textAllCaps="false"
            android:background="#00000000"
            android:id="@+id/offer_row_link1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#d3d3d3"
            android:layout_alignBaseline="@+id/offer_row_link2"
            android:text="@string/off_link"/>

        <Button
            android:textAllCaps="false"
            android:id="@+id/offer_row_link2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/off_button"
            android:padding="10dp"
            android:textColor="#fff"
            android:background="#E2321D"/>
    </RelativeLayout>
</LinearLayout>